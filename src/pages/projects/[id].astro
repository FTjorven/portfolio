---
import { getCollection, render } from "astro:content";
import MarkdownPostLayout from "../../layouts/MarkdownPostLayout.astro";

export async function getStaticPaths() {
    const projects = await getCollection("projects");

    const paths = projects.map((entry) => ({
        params: { id: entry.id },
        props: { frontmatter: entry.data, project: entry },
    }));

    return paths;
}

const frontmatter = Astro.props.frontmatter;
const { Content } = await render(Astro.props.project);
---

<MarkdownPostLayout frontmatter={frontmatter} backUrl="/projects">
    <Content />
</MarkdownPostLayout>
