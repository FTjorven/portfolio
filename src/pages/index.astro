---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import img1 from "../assets/images/img-1.png";
import img2 from "../assets/images/img-2.png";

import "../styles/reset.css";
import "../styles/global.css";

const pageTitle = "FTJORVEN";
const description =
	"Portfolio of ftjorven — student at Devine who enjoys creating with design, sound, and code.";
---

<BaseLayout title={pageTitle} description={description}>
	<div class="homepage">
		<h1 class="vertical-title">{pageTitle}</h1>

		<section class="intro-section">
			<Image
				src={img1}
				alt="img-1"
				class="main-image"
				width={219}
				height={229}
				widths={[256, 512, 768]}
				sizes="(min-width: 768px) 400px, 90vw"
				format="avif"
			/>

			<h2 class="subtitle">
				<em>book of</em>
				<span class="little-block">
					<strong>little</strong>
					<strong>things</strong>
				</span>
			</h2>

			<div class="intro-paragraph">
				<Image
					src={img2}
					alt="img-2"
					class="secondary-image"
					width={126}
					height={139}
					widths={[128, 256, 384]}
					sizes="(min-width: 768px) 200px, 50vw"
					format="avif"
				/>
				<p class="intro-text">
					I like to make things I find cool, I'm a student at Devine.
				</p>
			</div>

			<!-- <img src="images/hero-desktop.png" alt="" class="desktop-hero" /> -->
			<div
				id="desktop-hero-canvas"
				class="desktop-hero desktop-hero-canvas"
			>
			</div>
		</section>
		<script
			is:inline
			src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.7.0/p5.min.js"
		></script>
		<script>
			import "../scripts/sketch.js";
		</script>
		<section class="site-intro">
			<h2>Welcome to my portfolio</h2>
			<p>
				This website is a collection of the projects, experiments, and
				ideas that reflect what I enjoy creating. You&#39;ll find a mix
				of design, development, and personal writing. Each piece shows a
				little part of how I think and what I like to make.
			</p>

			<p>
				I&#39;m interested in how visuals, sound, and interaction can
				come together to make meaningful experiences. Whether it&#39;s
				coding something dynamic, designing a playful interface, or
				writing about music, I enjoy exploring how all of these connect.
			</p>

			<p>
				Feel free to look around — my <a href="/projects">projects</a> page
				features some of my recent design and web experiments, while the
				<a href="/writing">writing</a> section includes thoughts and pieces
				about music and creativity.
			</p>

			<p class="signature">– ftjorven</p>
		</section>
	</div>
</BaseLayout>

<style>
	.homepage {
		display: grid;
		grid-template-columns: auto 1fr;
		padding: 1rem;
		padding-bottom: 2rem;
		column-gap: 1rem;
	}

	.vertical-title {
		writing-mode: vertical-rl;
		transform: rotate(180deg);
		font-size: 6rem;
		font-weight: 800;
		letter-spacing: 0.05em;
		margin: 0;
		align-self: start;
	}

	.intro-section {
		display: grid;
		grid-template-columns: 1fr;
		gap: 1rem;
	}

	.main-image,
	.secondary-image {
		width: 90%;
		border-radius: var(--radius-lg);
		object-fit: contain;
	}

	.secondary-image {
		width: 40%;
	}

	.intro-paragraph {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.subtitle {
		display: flex;
		align-items: start;
		gap: 1rem;
		margin-bottom: -10rem;
	}

	.little-block {
		display: flex;
		flex-direction: column;
		line-height: 1;
	}

	.little-block strong {
		font-size: 2.2rem;
		font-weight: 500;
		font-family: var(--font-serif);
	}

	.subtitle em {
		font-family: var(--font-serif);
		font-size: 2.8rem;
		font-style: italic;
		font-weight: 700;
		color: transparent;
		-webkit-text-stroke: 1px var(--black);
	}

	.intro-text {
		max-width: 22rem;
		font-size: 1rem;
		line-height: 1.4;
	}

	.site-intro {
		grid-column: 1 / -1;
		margin-top: 1rem;
		padding: 0 0.5rem;
	}

	.site-intro h2 {
		font-size: 1.6rem;
		margin-bottom: 0.8rem;
	}

	.site-intro p {
		margin-bottom: 1rem;
		line-height: 1.45;
	}

	.signature {
		font-style: italic;
		margin-top: 1.5rem;
	}

	.desktop-hero-canvas {
		display: none;
		width: 100%;
		height: 600px;
		min-height: 500px;
		position: relative;
		border-radius: var(--radius-lg);
		overflow: hidden;
		border: 1px solid var(--black);
	}

	.desktop-hero-canvas canvas {
		display: block;
		width: 100% !important;
		height: 100% !important;
	}

	@media (min-width: 48rem) {
		.homepage {
			grid-template-columns: 120px 1fr 300px;
			column-gap: 2rem;
			padding: 1rem;
			padding-bottom: 3rem;
		}

		.main-image,
		.subtitle,
		.intro-paragraph {
			display: none;
		}

		.desktop-hero,
		.desktop-hero-canvas {
			display: block;
			width: 100%;
			object-fit: cover;
			border-radius: var(--radius-lg);
			grid-column: 2;
			align-self: start;
		}

		.desktop-hero {
			height: auto;
		}

		.desktop-hero-canvas {
			height: 600px;
			min-height: 500px;
		}

		.intro-section {
			grid-column: 2 / span 2;
			display: contents;
		}

		.site-intro {
			grid-column: 3;
			margin-top: 0;
			align-self: start;
		}
	}
</style>
