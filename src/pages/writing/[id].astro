---
import { getCollection, render } from "astro:content";
import MarkdownPostLayout from "../../layouts/MarkdownPostLayout.astro";

export async function getStaticPaths() {
    const posts = await getCollection("writing");

    const paths = posts.map((entry) => ({
        params: { id: entry.id },
        props: { frontmatter: entry.data, post: entry },
    }));

    return paths;
}

const frontmatter = Astro.props.frontmatter;
const { Content } = await render(Astro.props.post);

const BASE_URL = import.meta.env.BASE_URL || "/";
---

<MarkdownPostLayout frontmatter={frontmatter} backUrl={`${BASE_URL}writing`}>
    <Content />
</MarkdownPostLayout>
