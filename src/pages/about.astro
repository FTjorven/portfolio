---
import BaseLayout from "../layouts/BaseLayout.astro";
import Playlist from "../components/Playlist.astro";
import Skills from "../components/Skills.astro";

import "../styles/reset.css";
import "../styles/global.css";

const pageTitle = "about me";
const description =
    "A short introduction to who I am, what I do, and what inspires me — ftjorven, Web Design student at Devine.";

const name = "Tjorven Florin";
const occupation = "Web Design student at Devine, Howest Kortrijk";
const hobbies = [
    "- Music and live shows",
    "- Writing about music",
    "- Exploring local creative scenes",
    "- Combining code and design",
];
---

<BaseLayout title={pageTitle} description={description}>
    <div class="about-page">
        <section class="intro">
            <h2>ftjorven</h2>
            <h2>{pageTitle}</h2>
            <p>
                My name is {name}. I’m currently studying {occupation}. I have a
                passion for visual and auditory arts but I also love the coding
                and UX parts of the process. On this page I’d just like to show
                who I am a little better.
            </p>
        </section>

        <section class="education">
            <h3>education history</h3>
            <p>
                I’m currently in my second year of a Digital Design and
                Development course at Howest Kortrijk.
            </p>
        </section>

        <section class="more">
            <h3>occupation</h3>
            <p>{occupation}</p>

            <div class="more-list-boxes">
                <div class="list-box">
                    <h4>hobbies</h4>
                    <ul>
                        {hobbies.map((hobby) => <li>{hobby}</li>)}
                    </ul>
                </div>

                <div class="list-box">
                    <Skills />
                </div>
            </div>

            <h3>more to come...?</h3>
            <p>
                Besides my work in Web Design, I'm very passionate about music
                and live shows. I'm currently working on getting more into my
                local music scene. I work at a concert venue in Kortrijk and
                often write about music, which you can find in the writing
                section of my page.
            </p>
        </section>

        <section class="playlists">
            <h3>working playlists</h3>
            <div class="playlists_list">
                <Playlist
                    title="KR23"
                    number="1"
                    description="This is my playlist of ambient or piano music. Whenever I really have to focus, this one gets put on."
                    image=`/playlist-1.webp`
                    link="https://open.spotify.com/playlist/5S2axhaeEZgCzFmHcA5AY3?si=0e95d2406e114191"
                />

                <Playlist
                    title="JRJRJR"
                    number="2"
                    description="This is a collection of all the music of John Roseboro — really relaxing and one of my favourite artists!"
                    image=`playlist-2.webp`
                    link="https://open.spotify.com/playlist/2czaRGtqpTXGtN4iNSkpBE?si=23fafe6178f94a9b"
                />

                <Playlist
                    title="2025"
                    number="3"
                    description="These are all the songs I’ve listened to over the past year and liked enough to want to listen to again!"
                    image=`playlist-3.webp`
                    link="https://open.spotify.com/playlist/2rQ0ltmJ9PBAsemqgDsyYu?si=0f383be8e0f246b5"
                />
            </div>
        </section>

        <section class="outro">
            <p>
                I hope you know me a little better now. You can always contact
                me at
                <a href="mailto:florintjorven@gmail.com"
                    >florintjorven@gmail.com</a
                >.
            </p>
        </section>
    </div>
</BaseLayout>

<style>
    .about-page {
        padding: 1rem;
        max-width: var(--max-width-page);
        margin: 0 auto;
    }

    .intro h2:first-of-type {
        font-family: var(--font-serif);
        font-size: 2.4rem;
        margin-bottom: 1rem;
    }

    .intro h2:last-of-type {
        font-size: 1.8rem;
        margin-top: -0.5rem;
        position: relative;
        display: inline-block;
    }

    .intro h2:last-of-type::after {
        content: "";
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 60%;
        height: 3px;
        background: var(--black);
        border-radius: 2px;
    }

    .intro p {
        max-width: var(--max-width-text);
        line-height: 1.45;
        margin: 1rem 0 2rem;
    }

    .education,
    .more {
        margin-bottom: 2rem;
    }

    .education h3,
    .more h3,
    .playlists h3 {
        font-family: var(--font-serif);
        font-size: 1.4rem;
        margin-bottom: 0.6rem;
        position: relative;
        display: inline-block;
    }

    .education h3::before,
    .more h3::before,
    .playlists h3::before {
        content: "◆";
        margin-right: 0.5rem;
        opacity: 0.7;
        font-size: 0.9rem;
    }

    .more ul {
        list-style: none;
        padding: 0;
        margin-bottom: 1.2rem;
    }

    .more ul li {
        margin-bottom: 0.3rem;
    }

    .outro p {
        max-width: var(--max-width-text);
        line-height: 1.45;
        margin-top: 2rem;
    }

    .playlists {
        margin-top: 2rem;
    }

    .playlists h3 {
        margin-bottom: 1.5rem;
    }

    .playlists_list {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .more h3 {
        margin-top: 1.8rem;
        margin-bottom: 0.6rem;
    }

    .more p {
        margin-bottom: 1rem;
    }

    .more-list-boxes {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.2rem;
        margin: 1rem 0 2rem;
    }

    @media (min-width: 46.875rem) {
        .playlists_list {
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
            align-items: start;
        }

        .playlist-image {
            width: 100%;
            max-width: none;
        }

        .more-list-boxes {
            grid-template-columns: 1fr 1fr;
        }
    }

    .list-box {
        border: 2px solid var(--black);
        border-radius: var(--radius-lg);
        padding: 1rem 1.2rem;
        background: var(--white);
        transition:
            transform var(--transition-fast),
            box-shadow var(--transition-fast);
        position: relative;
    }

    .list-box:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .list-box h4 {
        font-family: var(--font-serif);
        font-size: 1.2rem;
        margin-bottom: 0.6rem;
        position: relative;
        display: inline-block;
    }

    .list-box h4::after {
        content: "✦";
        margin-left: 0.4rem;
        font-size: 0.8rem;
        opacity: 0.6;
    }

    .list-box ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .list-box ul li {
        margin-bottom: 0.3rem;
        line-height: 1.4;
    }
</style>
