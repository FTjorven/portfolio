---
const year = new Date().getFullYear();
import Social from "./Social.astro";
---

<style>
    html,
    body {
        margin: 0;
        padding: 0;
    }

    footer {
        width: 100%;
        background-color: #3f3f3f;
        color: #f2f2f2;
        text-align: center;
        padding: 3rem 1rem;
        font-family: "Satoshi", sans-serif;

        border-top-left-radius: 60px;
        border-top-right-radius: 60px;

        margin: 0;
        border: none;
    }

    footer h2 {
        font-family: "Junicode", serif;
        font-style: italic;
        font-size: 2rem;
        margin-bottom: 1.5rem;
        color: transparent;
        -webkit-text-stroke: 1px #f2f2f2;
        text-stroke: 1px #f2f2f2;
    }

    .section-title {
        font-weight: 600;
        margin-top: 1.5rem;
        margin-bottom: 0.5rem;
    }

    ul {
        list-style: none;
        padding: 0;
        margin: 1rem 0 2rem;
    }

    li {
        margin: 0.3rem 0;
    }

    a,
    a:visited,
    a:active {
        color: #f2f2f2;
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
        color: #fff;
    }

    .email {
        display: block;
        margin: 0.5rem 0 2rem;
    }

    .copyright {
        font-family: "Junicode", serif;
        font-style: italic;
        font-size: 1rem;
        opacity: 0.8;
    }
</style>

