---
const pathname = Astro.url.pathname;
const isActive = (href: string) => pathname === href;
---

<header>
    <img
        src={`${import.meta.env.BASE_URL}images/logo.svg`}
        alt="logo for site, F and T with dots next to them"
        width="30rem"
    />

    <button id="theme-toggle" aria-label="Toggle dark mode">
        <span class="theme-icon">☀️</span>
    </button>

    <button id="menu-btn" aria-expanded="false" aria-controls="primary-nav">
        Menu
    </button>

    <nav id="primary-nav" hidden>
        <div class="nav-bar">
            <img
                src={`${import.meta.env.BASE_URL}images/logo.svg`}
                alt="logo for site, F and T with dots next to them"
            />
            <button id="close-btn" aria-label="Close menu">Close</button>
        </div>

        <ul>
            <li>
                <a
                    href={`${import.meta.env.BASE_URL}/`}
                    class={isActive("") ? "active" : ""}>Homepage</a
                >
            </li>
            <li>
                <a
                    href={`${import.meta.env.BASE_URL}about`}
                    class={isActive("/about") ? "active" : ""}>About Me</a
                >
            </li>
            <li>
                <a
                    href={`${import.meta.env.BASE_URL}projects`}
                    class={isActive("/projects") ? "active" : ""}>Projects</a
                >
            </li>
            <li>
                <a
                    href={`${import.meta.env.BASE_URL}writing`}
                    class={isActive("/writing") ? "active" : ""}>Writing</a
                >
            </li>
        </ul>
    </nav>
</header>

<script is:inline>
    const btn = document.getElementById("menu-btn");
    const nav = document.getElementById("primary-nav");
    const closeBtn = document.getElementById("close-btn");

    function setOpen(open) {
        if (open) {
            nav.removeAttribute("hidden");
            btn.setAttribute("aria-expanded", "true");
        } else {
            nav.setAttribute("hidden", "");
            btn.setAttribute("aria-expanded", "false");
        }
    }

    btn?.addEventListener("click", () => setOpen(true));
    closeBtn?.addEventListener("click", () => setOpen(false));

    nav?.querySelectorAll("a").forEach((a) => {
        a.addEventListener("click", () => setOpen(false));
    });

    document.addEventListener("keydown", (e) => {
        if (e.key === "Escape") setOpen(false);
    });
</script>

<script>
    import "../scripts/theme-toggle.js";
</script>

<style>
    header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 1.25rem;
        font-size: 2rem;
        gap: 1rem;
    }

    #theme-toggle {
        background: none;
        border: 2px solid var(--black);
        border-radius: 50%;
        width: 2.5rem;
        height: 2.5rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.2s ease;
        font-size: 1.2rem;
        color: var(--black);
    }

    #theme-toggle:hover {
        transform: scale(1.1);
    }

    #menu-btn {
        background: none;
        border: 0;
        font: inherit;
        cursor: pointer;
        color: var(--black);
    }

    nav#primary-nav[hidden] {
        display: none;
    }

    nav#primary-nav {
        position: fixed;
        inset: 0 auto auto 0;
        width: 100%;
        background: #000;
        color: #fff;
        z-index: 50;
        border-bottom-left-radius: 60px;
        border-bottom-right-radius: 60px;
        padding: 1rem 1.25rem 3rem;
        box-sizing: border-box;
    }

    .nav-bar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding-block: 0.25rem 0.75rem;
    }

    #close-btn {
        background: none;
        border: 0;
        color: var(--black);
        font: inherit;
        cursor: pointer;
    }

    nav ul {
        list-style: none;
        padding: 2rem 1rem 1rem;
        margin: 0;
        display: grid;
        gap: 1.5rem;
        place-items: center;
        text-align: center;
    }

    nav a {
        color: var(--black);
        text-decoration: none;
        font-size: clamp(1.6rem, 6vw, 2.4rem);
        font-weight: 700;
        letter-spacing: 0.01em;
    }

    nav li + li::before {
        content: "";
        display: block;
        width: 60%;
        height: 1px;
        background: #555;
        margin: 0.25rem auto 0.75rem;
    }

    nav a.active {
        color: transparent;
        -webkit-text-stroke: 1.5px var(--black);
        text-stroke: 1.5px var(--black);
        font-weight: 800;
    }

    nav a:hover {
        text-decoration: underline;
    }

    @media (min-width: 768px) {
        #menu-btn,
        #close-btn,
        .nav-bar {
            display: none;
        }

        nav#primary-nav {
            position: static;
            background: transparent;
            color: var(--black);
            width: auto;
            padding: 0;
            border-radius: 0;
            display: block;
        }

        nav#primary-nav[hidden] {
            display: block;
        }

        nav#primary-nav ul {
            display: flex;
            gap: 2rem;
            padding: 0;
            margin: 0;
            place-items: center;
            text-align: left;
        }

        nav#primary-nav li + li::before {
            display: none;
        }

        nav#primary-nav a {
            color: var(--black);
            font-size: 1.2rem;
            font-weight: 600;
            text-decoration: none;
        }

        nav#primary-nav a.active {
            color: transparent;
            -webkit-text-stroke: 1px var(--black);
        }
    }
</style>
