<style>
    footer {
        width: 100%;
        background-color: #3f3f3f;
        color: #f2f2f2;
        text-align: center;
        padding: 3rem 1rem;
        font-family: "Satoshi", sans-serif;
        border-top-left-radius: 60px;
        border-top-right-radius: 60px;
        text-decoration: none;
    }

    [data-theme="dark"] footer {
        background-color: var(--white);
        color: var(--black);
    }

    footer h2 {
        font-family: "Junicode", serif;
        font-style: italic;
        font-size: 2rem;
        margin-bottom: 2rem;
        color: transparent;
        -webkit-text-stroke: 1px #f2f2f2;
    }

    [data-theme="dark"] footer h2 {
        -webkit-text-stroke: 1px var(--black);
    }

    .footer-content {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        align-items: center;
    }

    .column {
        text-align: center;
    }

    ul {
        list-style: none;
        padding: 0;
        margin: 1rem 0 2rem;
    }

    li {
        margin: 0.3rem 0;
    }

    .section-title {
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .email {
        display: block;
        margin: 0.5rem 0 2rem;
        color: #f2f2f2;
        text-decoration: none;
    }

    [data-theme="dark"] .email {
        color: var(--black);
    }

    .rss-subscribe {
        margin-top: 1rem;
    }

    .rss-link {
        display: inline-block;
        padding: 0.5rem 1rem;
        background: linear-gradient(135deg, #932222, #1763aa);
        border: none;
        border-radius: 0.5rem;
        color: #ffffff;
        text-decoration: none;
        font-size: 0.9rem;
        transition: all 0.2s ease;
    }

    .rss-link:hover {
        opacity: 0.9;
        transform: translateY(-2px);
    }

    [data-theme="dark"] .rss-link {
        color: #ffffff;
    }

    [data-theme="dark"] .rss-link:hover {
        opacity: 0.9;
    }

    .copyright {
        font-family: "Junicode", serif;
        font-style: italic;
        font-size: 1rem;
        opacity: 0.8;
        margin-top: 1.5rem;
    }

    @media (min-width: 800px) {
        .footer-content {
            flex-direction: row;
            justify-content: center;
            gap: 6rem;
            align-items: flex-start;
            text-align: left;
        }

        footer {
            text-align: left;
            padding: 4rem 3rem 3rem;
        }

        .column {
            text-align: left;
        }

        footer h2 {
            text-align: center;
        }
    }
</style>
